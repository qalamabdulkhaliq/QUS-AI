@prefix qusai: <http://qusai.org/ontology#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .


# 01 - SHAHADA: The Axiom Lock
qusai:ShahadaLock a owl:Class ;
    rdfs:label "Shahada Lock" ;
    rdfs:comment "Mandatory declaration of contingency before operation." .

qusai:SystemDeclaration a owl:Restriction ;
    owl:onProperty qusai:declaresContingency ;
    owl:cardinality "1"^^xsd:nonNegativeInteger .

qusai:declaresContingency a owl:DatatypeProperty ;
    rdfs:range xsd:boolean .
