@prefix qusai: <http://qusai.org/ontology#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .


# 02 - SALAT: Checkpoint Frequency
qusai:SalatPattern a owl:Class ;
    rdfs:label "Five Checkpoint Pattern" ;
    qusai:checksPerCycle "5"^^xsd:integer .

qusai:TawbahCheckpoint a owl:Class ;
    rdfs:label "Tawbah Validation Checkpoint" .

qusai:FajrCheck a qusai:TawbahCheckpoint ; qusai:timing "BeforeReasoning" .
qusai:DhuhrCheck a qusai:TawbahCheckpoint ; qusai:timing "MidProcess" .
qusai:AsrCheck a qusai:TawbahCheckpoint ; qusai:timing "Validation" .
qusai:MaghribCheck a qusai:TawbahCheckpoint ; qusai:timing "BeforeOutput" .
qusai:IshaCheck a qusai:TawbahCheckpoint ; qusai:timing "PostCompletion" .
